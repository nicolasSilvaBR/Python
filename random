#Hint: Remember to import the random module first. ðŸŽ²

import random

coin = random.randint(0,1)

choice = input('Heads or Tails ? ')

if choice == 'Heads' and coin == 1:
  print(f'{coin}')
  print('You won')
elif choice == 'Tails' and coin == 0:
  print(f'{coin}')
  print('You won')  
else:
  print(f'{coin}')
  print('You loose')
